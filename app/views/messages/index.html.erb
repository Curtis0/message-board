<h1>メッセージ一覧</h1>
<% @messages.each do |message| %>
  名前:<%= message.name %>
  内容:<%= message.body %>
  <br>
<% end %>

<div class="rows">
  <div class="col-md-4">
    <%= form_for Message.new do |f| %>
      <div class="form-group">
        <%= f.label :name, "名前:" %> <br>
        <%= f.text_field :name, class: "form-control" %>
      </div>
      <div class="form-group">
        <%= f.label :body, "内容:" %>
        <%= f.text_field :body, class: "form-control" %>
      </div>
        <%= f.submit %>

    <% end %>
  </div>  
</div>